<Page x:Class="DexDesktop.WelcomePopUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DexDesktop"
      mc:Ignorable="d" 
      Title="Welcome" Height="300" Width="500"
      Background="#181735">


    <Grid>
        <TextBlock Height="50" HorizontalAlignment="Left" Margin="10,10,0,0" x:Name="WelcomeHeading" Foreground="White" Text="Welcome:" VerticalAlignment="Top" FontSize="26" FontStretch="ExtraCondensed"/>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="90,10,0,0" x:Name="TextBlockName"  VerticalAlignment="Top" FontSize="15" FontStretch="ExtraCondensed" />
    </Grid>
</Page>
